<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="icon" type="image/svg+xml" href="/images/user.jpg">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/Style.css">
    <title>Register</title>
</head>

<body>

    <div class="container-fluid ">

        <div class="wrapper ">
            <div class="row justify-content-center mt-2">
                <div class="row">
                    <div class="col-md-12">
                        <img src="./images/CNLogo.png" class="CNLogo" alt="" />
                    </div>
                </div>

                <!-- ***************** right Area   ********************* -->
                <div class="col-md-5 border border-danger p-5 rounded box mb-5">
                    <div class="msg">
                        <p>Register here Ninja</p>
                        <span>
                            <img class="ninjaLogo ms-3" src="./images/codingNinjas.jpg" alt="" />
                        </span>
                    </div>

                    <% if(messages.error) { %>
                        <span class="text-red text-center para">
                            <%= messages.error %>
                        </span>
                        <% } %>

                            <form action="/" method="POST">
                                <div class="mb-3">
                                    <label for="username" class="form-label font-bold ">Name</label>
                                    <input name="username" value="<%= messages.username  %>" type="text"
                                        class="form-control" id="username" placeholder="Enter your name">

                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label font-bold">Email</label>
                                    <input name="email" value="<%= messages.email  %>" type="email" class="form-control"
                                        id="useremail" placeholder="Enter your email">
                                </div>
                                <div class="mb-3  password-wrapper">
                                    <label for="password" class="form-label font-bold">Password</label>
                                    <input name="password" type="password" class="form-control" id="password"
                                        placeholder="********************">
                                    <i class="bi bi-eye" id="togglePassword"></i>
                                </div>

                                <button type="submit" class="btn btn-primary ">Register</button>
                            </form>

                            <div class="row mt-1">
                                <div class="col-md-12 ">
                                    <a class="inline-block align-baseline font-bold text-sm float-end msg-s"
                                        href="/signin">
                                        Already a user ? Login
                                    </a>

                                </div>
                            </div>
                            <hr>
                            <div class="text-center mt-3 shadow-sm">
                                <a href="/auth/google" class="btn border border-secondary w-100">
                                   <img src="/images/google.svg" alt="google-icon" width="30" height="30" class="me-4">
                                     <span class="text-secondary fw-bold">
                                        Login with Google
                                     </span>   
                                </a>
                            </div>
                            <div class="text-center mt-3 shadow-sm">
                                <a href="/auth/google" class="btn border border-secondary w-100">
                                   <img src="/images/github.svg" alt="google-icon" width="30" height="30" class="me-4">
                                     <span class="text-secondary fw-bold">
                                        Login with GitHub
                                     </span>   
                                </a>
                            </div>
                </div>
            </div>
        </div>
    </div>

 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
    <script src="js/script.js"></script>
</body>

</html>