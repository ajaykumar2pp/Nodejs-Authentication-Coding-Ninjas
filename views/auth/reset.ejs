<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/svg+xml" href="/images/user.jpg">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    
    <link rel="stylesheet" href="css/Style.css">
    <title>Reset Password</title>
</head>

<body>
  
    <div class="container-fluid ">

        <div class="wrapper ">
            <div class="row justify-content-center mt-2">
                <div class="row">
                    <div class="col-md-12">
                      <img src="./images/CNLogo.png" class="CNLogo" alt="" />
                    </div>
                  </div>
                <!-- *****************************  right Area   ***************************** -->
                <div class="col-md-5 border border-danger p-5 rounded box">
                    <div class="msg">
                        <p>Reset Password Ninja</p>
                        <span>
                          <img class="ninjaLogo ms-3" src="./images/codingNinjas.jpg" alt="" />
                        </span>
                      </div>

                    <!-- ******************************************************************** -->
                    <form action="/reset" method="POST">
                        <% if(messages.error) { %>
                            <span class="text-red-500 text-sm para">
                                <%= messages.error %>
                            </span>
                            <% } %>
                                <!--******************  Name  *********************** -->
                                <div class="mb-3">
                                    <label for="email" class="form-label font-bold">Name</label>
                                    <input name="username"  value="<%= messages.username  %>" type="text" class="form-control " id="username"
                                        placeholder="Enter your name">
                                </div>
                                <!--******************  Old PassWord  ******************* -->
                                <div class="mb-3">
                                    <label for="password" class="form-label font-bold">Old Password</label>
                                    <input name="oldpassword" type="password" class="form-control" id="oldpassword"
                                        placeholder="************************">
                                </div>


                                <!--******************  New PassWord  ******************* -->
                                <div class="mb-3">
                                    <label for="password" class="form-label font-bold">New Password</label>
                                    <input name="newpassword" type="password" class="form-control" id="newpassword"
                                        placeholder="************************">
                                </div>

                                <div class="d-grid gap-2 col-8 mx-auto">
                                    <button type="submit" class="btn btn-primary mb-4">Submit</button>

                                </div>
                                <hr>
                                <a class="inline-block align-baseline font-bold text-sm  btn btn-primary" href="/">
                                   Register
                                </a>
                                <a class="inline-block align-baseline font-bold text-sm float-end msg-s" href="/signin">
                                    Already have an account?
                                </a>

                    </form>

                </div>
            </div>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>

</body>

</html>